<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <h1>Categories</h1>

    <table class="table table-striped">
      <thead >
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= link_to category.name, category %></td>
            <td><%= category.product.count %></td>
            <td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-success' %></td>
            <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>

</div>
